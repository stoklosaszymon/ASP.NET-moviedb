@model aaaaaa.Movies
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    //var movie = ViewBag.Movie as Movies;

    <div style="display:flex;flex-direction:row;flex-wrap:wrap">
        <div style="margin-top:10px;width:33%;min-width:320px">
            <img src=@Model.Poster />
        </div>
        <div style="margin-left:20px;width:33%;min-width:320px">
            <h1> @Model.Title</h1>
            <p> Director: @Model.Director</p>
            <p> Country: @Model.Country</p>
            <p> Genre: @Model.Genre</p>
        </div>
        <div style="display:flex;flex-direction:row;flex-wrap:wrap;width:200px;min-width:320px;margin-top:10px;max-height:150px;min-height:150px">
            <div style="width:50%;border:solid;border-color:red;height:50%;display:flex">
                <p style="font-size:28px;margin: auto auto auto 10%"><span>&#11088</span>@Model.imdbRating</p>
            </div>
            <div style="width:50%;text-align:right;border:solid;border-color:red;height:50%;display:flex">
                <p style="font-size:18px;margin: auto 10% auto auto">@Model.imdbVotes votes</p>
            </div>
             <div style="border:solid;border-color:red;width:100%;height:50%">
                  asd
             </div>
        </div>
    </div>
}
